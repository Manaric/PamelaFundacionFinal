@model IEnumerable<PamelaFundacionFinal.Models.Becado>

@{
    ViewBag.Title = "Index";
}

<h2>Becados</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha de nacimiento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            Apellido paterno
        </th>
        <th>
            Apellido materno
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Promedio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actividad)
        </th>
        <th>
            Escuela
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mensualidades.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organizacion.Nombre)
        </th>
        <th>
            Nombre del tutor
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoPaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoMaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Promedio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actividad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Escuela.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensualidades.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organizacion.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tutor.Nombre)
            </td>
            <td>



                @Html.ActionLink("Editar", "Edit", new { id = item.Becado_ID }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detalles", "Details", new { id = item.Becado_ID }, new { @class = "btn btn-default" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Becado_ID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>